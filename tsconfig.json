{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // TODO "noUnusedLocals": true,
    // TODO "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@fortawesome/*": [
        "node_modules/@fortawesome/*/index.d.ts",
        "node_modules/@fortawesome/*"
      ]
    }
  },
  "include": ["src"]
}
